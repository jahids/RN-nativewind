{
  "info": {
    "name": "Support Chat Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "6d3aaf9e-3b1a-4d6e-8f2e-1a1b1c2d3e4f"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/health", "host": ["{{baseUrl}}"], "path": ["health"] }
      }
    },
    {
      "name": "Happy Path",
      "item": [
        {
          "name": "Create Session",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{}"},
            "url": { "raw": "{{baseUrl}}/api/chat/session", "host": ["{{baseUrl}}"], "path": ["api","chat","session"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status 200', () => pm.response.code === 200);",
                  "const json = pm.response.json();",
                  "pm.expect(json).to.have.property('sessionId');",
                  "pm.environment.set('sessionId', json.sessionId);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Provide Product",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"message\": \"Mobile App\",\n  \"context\": { \n    \"product\": null, \n    \"issue\": null, \n    \"urgency\": null, \n    \"ticketId\": null \n  }\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/chat/message", "host": ["{{baseUrl}}"], "path": ["api","chat","message"] }
          }
        },
        {
          "name": "Provide Issue",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"message\": \"It crashes when I upload photos\",\n  \"context\": { \n    \"product\": \"Mobile App\", \n    \"issue\": null, \n    \"urgency\": null, \n    \"ticketId\": null \n  }\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/chat/message", "host": ["{{baseUrl}}"], "path": ["api","chat","message"] }
          }
        },
        {
          "name": "Provide Urgency",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"message\": \"High\",\n  \"context\": { \n    \"product\": \"Mobile App\", \n    \"issue\": \"Crashes on upload\", \n    \"urgency\": null, \n    \"ticketId\": null \n  }\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/chat/message", "host": ["{{baseUrl}}"], "path": ["api","chat","message"] }
          }
        },
        {
          "name": "Confirm Yes",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"message\": \"Yes\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/chat/message", "host": ["{{baseUrl}}"], "path": ["api","chat","message"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "pm.test('completed state', () => pm.expect(json.context.state).to.eql('complete'));",
                  "pm.test('ticket id present', () => pm.expect(json.context.ticketId).to.match(/^T-/));"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Alternate & Edge Cases",
      "item": [
        {
          "name": "Confirm No (from confirming state)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": { "mode": "raw", "raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"message\": \"No\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/chat/message", "host": ["{{baseUrl}}"], "path": ["api","chat","message"] }
          }
        },
        {
          "name": "Invalid Session (404)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": { "mode": "raw", "raw": "{\n  \"sessionId\": \"00000000-0000-0000-0000-000000000000\",\n  \"message\": \"Hi\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/chat/message", "host": ["{{baseUrl}}"], "path": ["api","chat","message"] }
          }
        },
        {
          "name": "Empty Message (400)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": { "mode": "raw", "raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"message\": \"   \"\n}" },
            "url": { "raw": "{{baseUrl}}/api/chat/message", "host": ["{{baseUrl}}"], "path": ["api","chat","message"] }
          }
        },
        {
          "name": "Too Long Message (413)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": { "mode": "raw", "raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"message\": \"\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/chat/message", "host": ["{{baseUrl}}"], "path": ["api","chat","message"] }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000" },
    { "key": "sessionId", "value": "" }
  ]
}

